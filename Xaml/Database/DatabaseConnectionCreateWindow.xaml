<Window x:Class="Ecng.Xaml.Database.DatabaseConnectionCreateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xaml="clr-namespace:Ecng.Xaml"
        xmlns:db="clr-namespace:Ecng.Xaml.Database"
        Title="Новая строка подключения" ShowInTaskbar="False"
		Width="Auto" Height="Auto" WindowStartupLocation="CenterOwner"
		SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <Grid Margin="5">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="100" />
			<ColumnDefinition Width="*" MinWidth="300" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition MinHeight="240" />
			<RowDefinition Height="5" />
			<RowDefinition Height="24" />
		</Grid.RowDefinitions>

		<db:DatabaseConnectionPanel x:Name="SettingsGrid" Grid.ColumnSpan="3" />

		<Button x:Name="TestCtrl" Grid.Row="2" Grid.Column="0" Click="TestCtrl_Click">Проверить</Button>
		<Button x:Name="Ok" Grid.Row="2" Grid.Column="2" Width="100" IsEnabled="False" IsDefault="True" xaml:XamlHelper.DialogResult="True" HorizontalAlignment="Right">OK</Button>
	</Grid>
</Window>
