<dxe:ButtonEditSettings x:Class="Ecng.Xaml.FolderBrowserEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:xaml="clr-namespace:Ecng.Xaml"
             AllowDefaultButton="False">

    <xaml:ValidationHelper.ValidationRules>
        <xaml:ValidationRulesCollection>
            <xaml:FolderValidationRule />
        </xaml:ValidationRulesCollection>
    </xaml:ValidationHelper.ValidationRules>

    <dxe:ButtonEditSettings.Buttons>
        <dxe:ButtonInfo x:Name="OpenBtn" GlyphKind="Search" Click="OpenBtn_OnClick"/>
        <dxe:ButtonInfo x:Name="ClearBtn" GlyphKind="Cancel" Click="ClearBtn_OnClick"/>
    </dxe:ButtonEditSettings.Buttons>
</dxe:ButtonEditSettings>
