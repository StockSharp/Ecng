<UserControl x:Class="Ecng.Xaml.SecretPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:xaml="clr-namespace:Ecng.Xaml"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <PasswordBox x:Name="PasswordCtrl" PasswordChanged="PasswordCtrl_OnPasswordChanged" 
				 BorderThickness="{Binding RelativeSource={RelativeSource AncestorType={x:Type xaml:SecretPicker}}, Path=BorderThickness}"
				 BorderBrush="{Binding RelativeSource={RelativeSource AncestorType={x:Type xaml:SecretPicker}}, Path=BorderBrush}"/>
</UserControl>