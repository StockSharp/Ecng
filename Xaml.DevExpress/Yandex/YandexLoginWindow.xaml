<dx:ThemedWindow
		x:Class="Ecng.Xaml.DevExp.Yandex.YandexLoginWindow" x:ClassModifier="internal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
        Title="Share file" Height="480" Width="640" 
        WindowStartupLocation="CenterScreen" Topmost="True" ShowInTaskbar="False"
        Loaded="YandexLoginWindow_OnLoaded">

	<dx:LoadingDecorator x:Name="BusyIndicator" IsSplashScreenShown="True">
		<dx:LoadingDecorator.SplashScreenTemplate>
			<DataTemplate>
				<dx:WaitIndicator DeferedVisibility="True" Content="{Binding Title}"/>
			</DataTemplate>
		</dx:LoadingDecorator.SplashScreenTemplate>
		<Grid>
			<WebBrowser Name="Browser" />
		</Grid>
	</dx:LoadingDecorator>
</dx:ThemedWindow>