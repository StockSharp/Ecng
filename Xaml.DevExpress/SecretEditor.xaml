<UserControl x:Class="Ecng.Xaml.DevExp.SecretEdit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:xaml="clr-namespace:Ecng.Xaml.DevExp">

    <dxe:PasswordBoxEdit x:Name="PasswordCtrl" 
						 BorderThickness="{Binding RelativeSource={RelativeSource AncestorType={x:Type xaml:SecretEdit}}, Path=BorderThickness}"
						 BorderBrush="{Binding RelativeSource={RelativeSource AncestorType={x:Type xaml:SecretEdit}}, Path=BorderBrush}"
						 EditValueChanged="BaseEdit_OnEditValueChanged"/>
</UserControl>
