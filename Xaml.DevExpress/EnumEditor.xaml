<dxe:ComboBoxEditSettings x:Class="Ecng.Xaml.DevExp.EnumEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:devExpress="clr-namespace:Ecng.Xaml.DevExp"
             ApplyItemTemplateToSelectedItem="True" IsTextEditable="False">

    <dxe:ComboBoxEditSettings.Resources>
        <devExpress:EnumDisplayNameConverter x:Key="EnumDisplayNameConverter"/>
    </dxe:ComboBoxEditSettings.Resources>

    <dxe:ComboBoxEditSettings.ItemTemplate>
        <DataTemplate>
            <TextBlock Text="{Binding Path=., Converter={StaticResource EnumDisplayNameConverter}}" Margin="5,0,5,0"/>
        </DataTemplate>
    </dxe:ComboBoxEditSettings.ItemTemplate>
    <!--<dxe:ComboBoxEditSettings.EditNonEditableTemplate>
        <ControlTemplate>
            <TextBlock Text="{Binding}"/>
        </ControlTemplate>
    </dxe:ComboBoxEditSettings.EditNonEditableTemplate>-->
</dxe:ComboBoxEditSettings>
