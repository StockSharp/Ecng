<Window
		x:Class="Ecng.Xaml.DevExp.DdeSettingsWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:dxprg="http://schemas.devexpress.com/winfx/2008/xaml/propertygrid"
		Title="DDE settings" ShowInTaskbar="False" WindowStartupLocation="CenterOwner"
		ResizeMode="NoResize" Width="400" Height="400">
    <Grid Margin="5">
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition Height="22" />
		</Grid.RowDefinitions>

		<dxprg:PropertyGridControl x:Name="DdeSettingsGrid" 
								   ShowDescriptionIn="ToolTipAndPanel" ShowSearchBox="False" ShowToolPanel="False" ShowMenuButtonInRows="False"
								   SortMode="Definitions" ExpandCategoriesWhenSelectedObjectChanged="True" AllowExpanding="Default"/>

		<Grid Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="100" />
				<ColumnDefinition Width="5" />
				<ColumnDefinition Width="150" />
				<ColumnDefinition />
				<ColumnDefinition Width="100" />
			</Grid.ColumnDefinitions>
			
			<Button x:Name="StartStop" Click="StartStop_OnClick" Grid.Column="0">Start</Button>
			<Button x:Name="Flush" Click="Export_OnClick" Grid.Column="2">Flush (one time)</Button>

			<Button IsDefault="True" Click="Ok_OnClick" Grid.Column="4">OK</Button>
		</Grid>
		
	</Grid>
</Window>