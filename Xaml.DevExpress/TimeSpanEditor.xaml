<dxe:ButtonEditSettings x:Class="Ecng.Xaml.DevExp.TimeSpanEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             AllowDefaultButton="False" MaskType="RegEx"
			 Mask="(\d)\s([01]?[0-9]|2[0-3]):(60|([0-5][0-9])):(60|([0-5][0-9]))\.(\d\d\d\d\d\d\d)" 
             MaskUseAsDisplayFormat="True" AllowSpinOnMouseWheel="True">

    <dxe:ButtonEditSettings.Buttons>
        <dxe:SpinButtonInfo SpinStyle="Vertical" Name="SpinBtn"/>
    </dxe:ButtonEditSettings.Buttons>
</dxe:ButtonEditSettings>
