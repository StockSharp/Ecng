<UserControl x:Class="Ecng.UI.DownloadProgressBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="30">
	<UserControl.Resources>
		<Storyboard x:Name="LoadingAnimation" Duration="0:0:1" Completed="LoadingAnimation_Completed" />
	</UserControl.Resources>
    <Canvas x:Name="LayoutRoot">
		<ProgressBar x:Name="ValueCtrl" Value="50" Maximum="100" Width="400" Height="30" />
		<TextBlock x:Name="TextCtrl" TextAlignment="Center" Canvas.Top="5" Width="400" Height="30" />
    </Canvas>
</UserControl>
